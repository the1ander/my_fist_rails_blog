<%= form_with(model: @post, data:{turbo:false}, local: true) do |form| %>
<div class="form_box title_box">
    <%= form.label :title %>
    <%= form.text_field :title, placeholder:"Add title" %>
  </div>
  <br/>
  <div class="form_box content_box">
    <%= form.label :content %>
    <%= form.text_area :content, placeholder:"Add Contents" %>
  </div>

  <div class="form_box thumnail">
    <%= form.label :thumbnail %>
    <%= form.file_field :thumbnail %>
  </div>

  <div class="form_box">
    <div class="col-sm-8 col-sm-offset-2">
      <%= form.label :Category, "Pick category/categories" %><br />
      <div class="cat-opt-flex">
      <%= form.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
        <% cb.label(class: "checkbox-inline input_checkbox" ) {cb.check_box(class: "checkbox" ) + cb.text } %>
          <% end %>
        </div>
    </div>
  </div>

  <%= form.submit "Publish" %>
<% end %>


